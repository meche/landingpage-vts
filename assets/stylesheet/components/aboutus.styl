.about-us
	width 100%
	background-color grey-about

.about-us-content
	@extends .wrap-content
	color white-volts
	+e(title)
		text-align center
		font-size 40px
		font-weight 700
		line-height 60px
		text-transform uppercase
		padding-top 40px
	+e(text)
		text-align center
		font-size 16px
		color grey-text
		padding-bottom 60px

.about-us-details
	@extends .wrap-content
	position relative
	display flex
	flex-flow row wrap
	justify-content space-between
	align-items stretch
	&::before
		content ' '
		position absolute
		top -10px
		left 0
		width 100%
		height 10px
		background-color white-volts
		border-radius 15px 15px 0 0

.about-us-card
	width percentage( 280 / 960 )
	margin-top 80px
	display flex
	flex-flow column wrap
	justify-content flex-start
	align-items center
	+m(last)
		width percentage( 780 / 960 )
		margin 0 auto
		padding-top 20px
	+e(title)
		margin-top 30px
		font-size 20px
		font-weight 700
		line-height 30px
		text-transform uppercase
	+e(text)
		color grey-text
		font-size 16px
		line-height 24px
		text-align center
	+e(brands)
		width 100%
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items center
		padding 20px
		margin-top 10px
		margin-bottom 60px
		border 1px solid grey-complement
		border-radius 15px
