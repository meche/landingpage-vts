.btn
	text-decoration none
	border-radius 10px
	border 0

.btn-jobs
	background-color yellow-volts
	padding 10px
	color white-volts
	font-style italic
	font-weight 700
	text-transform uppercase
	float right
	&:hover
		background-color grey-card

.btn-thumb
	background-color yellow-volts
	display flex
	flex-flow row wrap
	justify-content center
	align-items center
	padding 0
	font-size 30px
	font-style none
	color white-volts
	border-radius 50% 50%
	border 3px solid white-volts
	&:hover
		background-color grey-card

.btn-search
	background-color grey-card
	padding 7px 15px
	margin-left 10px
	color white-volts
	font-style italic
	font-weight 700
	text-transform uppercase
	&:hover
		background-color grey-complement
