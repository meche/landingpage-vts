.apply
	width 100%

.apply-header
	@extends .wrap-content
	position relative
	&::after
		content ' '
		position absolute
		bottom 0
		left 0
		width 100%
		height 10px
		background-color grey-about
		border-radius 15px 15px 0 0
	+e(title)
		padding 60px 0 40px 0
		color grey-about
		font-size 40px
		font-weight 700
		text-align center
		text-transform uppercase

.apply-content
	width 100%
	background-color yellow-volts

.apply-resume
	@extends .wrap-content
	padding 60px 0
	display flex
	flex-flow row wrap
	justify-content space-between
	align-items stretch
	.apply-details
		width percentage( 390 / 960 )
		+e(title)
			width 100%
			height auto
		+e(text)
			max-width 378px
			padding 10px 0
			font-size 14px
			font-weight 400
			line-height 24px
		+e(arrow)
			float right


